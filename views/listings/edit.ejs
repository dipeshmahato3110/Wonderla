<% layout("/layouts/boilerplate") %>
<body>
    <h2>Edit the listing</h2>
    <form action="/listings/<%= listing._id %>?_method=put" method="post" >
       <input name="listing[title]" value="<%=listing.title %>" type="text"><br><br>
        <textarea name="listing[description]" type="text"><%=listing.title  %></textarea><br><br>
        <input name="listing[image]" value="<%=listing.image %>"  type="text"><br><br>
        <input name="listing[price]" value="<%=listing.price %>"  type="number"><br><br>
        <input name="listing[location]" value="<%=listing.location %>"  type="text"><br><br>
        <input name="listing[country]" value="<%=listing.country %>"  type="text">
        <br><br>
        <button>Edit</button>
    </form>
</body>
