<% layout("/layouts/boilerplate") %>

    <body>
        <h1>All Listing</h1>
        <!-- <form action="/listings/new" method="get">
        <button>Create New Listing</button>
    </form> -->
        <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <!-- row-cols-lg-3 [this define that in a row no of 
             columns with large screen size is 3] -->
            <% for(let listing of allListing){ %>
                <!-- <div class="card col" style="width: 20rem;"> -->
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col ">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" style="height: 20rem">
                        <div class="card-img-overlay">DM</div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                <%= listing.location %> <br>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>